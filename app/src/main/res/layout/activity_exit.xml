<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExitActivity">
    <EditText
        android:id="@+id/exit_sou"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:hint="请搜索..."
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape_radius"
        android:drawableRight="@drawable/root"
        />
    <ImageView
        android:id="@+id/exit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="48dp"
        android:src="@drawable/a_4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/exit_sou"
        android:layout_marginTop="59dp"
        android:text="热搜"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/exit_sou" />

    <bwei.com.jd_demo.layout.FlowLayout
        android:id="@+id/exit_flowlayout"
        android:layout_width="500dp"
        android:layout_height="184dp"
        android:layout_alignLeft="@+id/exit_sou"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/exit_sou"
        android:layout_marginTop="107dp"></bwei.com.jd_demo.layout.FlowLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/exit_sou"
        android:layout_marginTop="303dp"
        android:text="历史记录"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/exit_sou" />

    <bwei.com.jd_demo.layout.FlowLayout
        android:id="@+id/exit_flow2"
        android:layout_width="500dp"
        android:layout_height="184dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"></bwei.com.jd_demo.layout.FlowLayout>
</RelativeLayout>