<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addr.view.AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/addr_add_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="120dp"
            android:text="收货地址列表"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货姓名："
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/addr_add_name"
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:hint="请输入"
            android:background="@drawable/shape_radius"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码："
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/addr_add_mobile"
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:hint="请输入"
            android:background="@drawable/shape_radius"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址："
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/addr_add_addr"
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:hint="请输入"
            android:background="@drawable/shape_radius"
            />
    </LinearLayout>
    <Button
        android:id="@+id/addr_add_login"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="保存"
        android:textSize="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/shape_radius2"
        />
</LinearLayout>