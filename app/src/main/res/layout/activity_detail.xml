<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">
    <com.youth.banner.Banner
        android:id="@+id/detail_banner"
        android:layout_width="match_parent"
        android:layout_height="450dp"></com.youth.banner.Banner>

    <TextView
        android:id="@+id/detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="375dp"
        android:layout_marginStart="40dp"
        android:text="价格"
        android:textColor="#FF33"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/detail_price"
        android:layout_marginBottom="254dp"
        android:text="xxx"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/detail_price" />

    <TextView
        android:id="@+id/detail_youhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/detail_price"
        android:layout_marginBottom="133dp"
        android:text="xxxx"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/detail_price" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_radius"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:src="@drawable/service"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="27dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="185dp"
            android:src="@drawable/shangpu"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="185dp" />

        <ImageView
            android:onClick="CarLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="219dp"
            android:src="@drawable/shopcar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="219dp" />

        <Button
            android:id="@+id/detail_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
           android:background="@drawable/shape_radius2"
            android:text="加入购物车"
            android:textSize="30dp"

            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp" />
    </RelativeLayout>
</RelativeLayout>