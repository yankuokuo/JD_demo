<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/addr_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="41dp"
        android:text="姓名"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="69dp" />
    <TextView
        android:id="@+id/addr_item_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/addr_item_name"
        android:layout_marginStart="253dp"
        android:text="电话"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="253dp" />
    <TextView
        android:id="@+id/addr_item_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/addr_item_name"
        android:layout_marginTop="121dp"
        android:text="xxx"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/addr_item_name" />

    <CheckBox
        android:id="@+id/addr_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="184dp"
        android:text="默认地址"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp" />

    <TextView
        android:id="@+id/addr_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addr_checkbox"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:text="修改地址"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp" />
</RelativeLayout>
