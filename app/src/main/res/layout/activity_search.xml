<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/exit_sou"
            android:layout_width="521dp"
            android:layout_height="44dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:background="@drawable/shape_radius"
            android:drawableRight="@drawable/root"
            android:hint="请搜索..." />

        <ImageView
            android:id="@+id/exit_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a_4" />
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:orientation="horizontal"
       >
       <TextView
           android:id="@+id/search_zonghe"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="综合▼"
           android:gravity="center"
           android:background="@drawable/shape_radius"
           android:layout_gravity="center_vertical"
           />
       <TextView
           android:id="@+id/search_xiaoliang"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="销量"
           android:background="@drawable/shape_radius"
           android:gravity="center"
           android:layout_gravity="center_vertical"
           />
       <TextView
           android:id="@+id/search_jiage"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="价格▲▼"
           android:gravity="center"
           android:background="@drawable/shape_radius"
           android:layout_gravity="center_vertical"
           />
   </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/sousuo_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/exit_login"
        ></android.support.v7.widget.RecyclerView>


</LinearLayout>